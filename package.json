{
  "name": "@saascore/side-sheet",
  "version": "0.0.0",
  "description": "React components and hooks to help implement side sheets (panels/flyouts)",
  "main": "lib/index.js",
  "module": "lib/index.es.js",
  "files": [
    "lib"
  ],
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -cw",
    "test": "jest --env=jsdom --verbose=false",
    "test:watch": "yarn test --watch",
    "prepare": "rimraf ./lib",
    "tag-release": "standard-version",
    "release": "./release.sh",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saas-core/side-sheet.git"
  },
  "keywords": [
    "React",
    "hooks",
    "side sheet",
    "flyout",
    "panel"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/saas-core/side-sheet/issues"
  },
  "homepage": "https://github.com/saas-core/side-sheet#readme",
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@storybook/addon-actions": "^4.1.13",
    "@storybook/addon-links": "^4.1.13",
    "@storybook/addon-options": "^4.1.13",
    "@storybook/addons": "^4.1.13",
    "@storybook/react": "^4.1.13",
    "@types/jest": "^24.0.6",
    "@types/react": "^16.8.4",
    "@types/storybook__addon-options": "^4.0.1",
    "@types/storybook__react": "^4.0.1",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.5",
    "jest": "^24.1.0",
    "jest-dom": "^3.1.2",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-testing-library": "^5.9.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.6.0",
    "rollup-plugin-typescript2": "^0.20.1",
    "standard-version": "^5.0.2",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.3333"
  },
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/__tests__/*.test.(ts|js)?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ]
  },
  "dependencies": {
    "emotion": "^10.0.7",
    "react-spring": "^8.0.7"
  },
  "peerDependencies": {
    "react": "^16.8.4",
    "react-dom": "^16.8.4"
  }
}
